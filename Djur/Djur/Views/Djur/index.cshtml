@model IEnumerable<Djur.Models.Product>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-sm-4 col-md-3">
            <div class="thumbnail">
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.Title)">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p><a href="/Djur/Details/@Html.DisplayFor(modelItem => item.ProductID)" class="btn btn-info" role="button">Info</a></p>
                    @Html.ActionLink("Addtocart", "Addtocart","ShoppingCart", new { id = @item.ProductID, amount=1 },null)
                </div>
            </div>
        </div>
    }
</div>