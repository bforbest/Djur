@model IEnumerable<Djur.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <h3>Dogs</h3>
    @foreach (var item in Model)
    {
        if (item.Category == "Dogs")
        {
            <div class="col-xs-12 col-sm-4 col-md-3">
                <div class="thumbnail">
                    <a href="/Djur/Details/@Html.DisplayFor(modelItem => item.ProductID)"><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.Title)"style="height:140px; width:100%;"></a>
                    <div class="caption">
                        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                        
                        @Html.ActionLink("Add to cart", "Add to cart", "ShoppingCart", new { id = @item.ProductID, amount = 1 }, null)
                    </div>
                </div>
            </div>

        }
    }
